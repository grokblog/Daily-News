# Grok API Configuration (Local Gateway)
# Pastikan Grok API Gateway sudah running di: python main.py
GROK_API_URL=http://localhost:8017/v1/chat/completions
GROK_API_KEY=grok-blog-generator
USE_LOCAL_GATEWAY=true

# Site Configuration
SITE_URL=https://yoursite.com
SITE_NAME=Viral News Hub
SITE_DESCRIPTION=Berita Terkini & Viral dari Seluruh Dunia

# Content Generation Settings
ARTICLES_PER_RUN=5
MIN_CONTENT_LENGTH=1500
MAX_CONTENT_LENGTH=3000

# Storage Mode (file, mysql, redis)
STORAGE_MODE=file

# Database URL (if using mysql or redis)
# DATABASE_URL=mysql://user:pass@localhost/dbname
# DATABASE_URL=redis://localhost:6379/0

# Optional: Custom Domain for GitHub Pages
# CUSTOM_DOMAIN=blog.yourdomain.com
